<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray_dark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorSecondary">@color/colorAccentDark</item>

        <!--Toolbar-->
        <item name="colorSurface">@color/gray_dark</item>

        <!--Popup menu-->
        <item name="colorOnSurface">@color/gray_light</item>

        <!-- Background de la app -->
        <item name="android:colorBackground">?attr/colorPrimaryDark</item>

        <!-- Tema por default de las CardViews-->
        <item name="materialCardViewStyle">@style/AppTheme.CardView</item>

    </style>

    <style name="Theme.FizzBuzz" parent="AppTheme.Base" />

</resources>